{
  "appId": "com.reviewpackets.desktop",
  "productName": "ReviewPackets",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron/**/*",
    "frontend/dist/**/*"
  ],
  "extraResources": [
    {
      "from": "backend/dist/ReviewPacketsBackend.exe",
      "to": "backend/ReviewPacketsBackend.exe"
    },
    {
      "from": "backend/collaborator_config.json",
      "to": "backend/collaborator_config.json"
    }
  ],
  "win": {
    "target": "nsis",
    "sign": false,
    "signingHashAlgorithms": [],
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  }
}
